#BASE IMAGE
FROM wnwnsgh/centos7-base-systemd

#Utils Install
RUN set -x  yum update -y && yum upgrade -y  && \
yum install -y epel-release && \
yum install -y wget htop httpd openssl vim unzip zip \
openssh-server openssh-clients git \
ncdu tree cronie gcc-c++ gnu-make \
readline-devel zlib-devel &&\
systemctl enable httpd; yum clean all

#COPY SOURCE FILE
ADD https://ftp.postgresql.org/pub/source/v9.6.21/postgresql-9.6.21.tar.gz /usr/local/src
ADD https://nodejs.org/dist/latest-v10.x/node-v10.24.0-linux-x64.tar.gz /usr/local/src
ADD https://www.desknets.com/binary/neo/linuxpg96/dneo_6.0.1.1_pg9.6_linux_x64.tar.gz /usr/local/src


#RUN INIT SCRIPT
#RUN /usr/local/src/RUN-POSTGRESQL-INIT.sh

#PORT OPEN
EXPOSE 22
EXPOSE 80

CMD ["/usr/sbin/init"]
